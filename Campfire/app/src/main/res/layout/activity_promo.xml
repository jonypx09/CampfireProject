<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonat.campfire.PromoActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/appSignP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:fontFamily="serif"
        android:text="Campfire"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:text="Welcome to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/appSignP1"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appExplainText"
        android:layout_marginBottom="151dp"
        android:textSize="23sp"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="A new and easy way to form groups"
        android:textColor="@color/colorAccent" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginBottom="10dp"
        android:id="@+id/signupButton"
        android:onClick="toSignUpScreen"
        android:width="200dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:onClick="toLoginScreen"
        android:width="200dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/signupButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/app_icon_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/appSignP1"
        android:layout_alignStart="@+id/appSignP1"
        android:layout_below="@+id/appSignP2"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/group_icon_large" />

</RelativeLayout>
