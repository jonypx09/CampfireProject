<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personalize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonat.campfire.PersonalizeActivity"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="Preferred Programming Language(s):"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/languagePrompt"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="8dp" />

            <CheckBox
                android:text="Python"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pythonCheckbox"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Java"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/javaCheckbox"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cCheckbox"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="HTML"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/htmlCheckbox"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Javascript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/javascriptCheckbox"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="SQL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sqlCheckbox"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Choose your days of availability:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/schedulePrompt"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingTop="16dp" />

            <CheckBox
                android:text="Sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox5"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox6"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <CheckBox
                android:text="Saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox7"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/prevCoursePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingTop="16dp"
                android:text="Previously Completed Course:"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/previousField"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <TextView
                android:text="Interesting Elective Course you have taken:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/electivePrompt"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:paddingTop="16dp" />

            <EditText
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/electivesField"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent" />

            <TextView
                android:text="Favourite pastime activity:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hobbiesPrompt"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:paddingTop="16dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.41"
                android:background="@android:color/holo_blue_dark"
                android:entries="@array/pastimes"
                android:paddingBottom="10dp"
                android:paddingTop="8dp"
                android:spinnerMode="dialog" />

            <Button
                android:text="Fill Out Availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startMatchingButton"
                android:onClick="toMainScreen"
                android:background="@color/colorAccent"
                android:layout_marginTop="50dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
