<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    tools:context="com.example.jonat.campfire.SignUpActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/emailPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/surnameTextField"
        android:layout_marginTop="26dp"
        android:fontFamily="serif"
        android:text="Email Address:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/surnamePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstNameTextField"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="Surname:"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/surnameTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/firstNameTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/firstNameTextField"
        android:layout_below="@+id/surnamePrompt"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/passwordPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailField"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Password:"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/emailField"
        android:layout_below="@+id/passwordPrompt"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/courseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/coursePrompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/surnameTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/surnameTextField"
        android:layout_below="@+id/emailPrompt"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/coursePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Course Code:"
        android:textColor="@android:color/white"
        android:layout_below="@+id/passwordField"
        android:layout_alignRight="@+id/courseField"
        android:layout_alignEnd="@+id/courseField"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/firstNamePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="serif"
        android:text="First Name:"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/firstNameTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstNamePrompt"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="checkFields"
        android:text="Create Account" />

</RelativeLayout>
