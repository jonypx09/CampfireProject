<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pastime_input_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/pastimePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your own pastime activity:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title" />

    <EditText
        android:id="@+id/userInputPastime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:selectAllOnFocus="true" />

</LinearLayout>